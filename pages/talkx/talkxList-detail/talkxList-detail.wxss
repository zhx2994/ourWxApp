.container{
  display: flex;
  flex-direction: column;
}
.headMap{
  width: 100%;
  height: 460rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  top: 175rpx;
  left: 50%;
  margin-left: -51rpx;
  opacity: 0.6;
}
.author-info{
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.author-headPortrait{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.author-name{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}
.author-by{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}
.author-time{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
  vertical-align: middle;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 40rpx;
  margin-left: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.tool .line{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
}
.circle-img image:nth-of-type(even){
  margin-left: 30rpx;
}
.detail{
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}