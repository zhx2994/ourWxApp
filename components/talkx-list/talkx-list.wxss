/* component/article-list/article-list.wxss */
.talkxList-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
  background-color: white;
}
.talkxList-author-info{
  margin-top: 15rpx;
  margin-left: 25rpx; 
}
.talkxList-author-info image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.talkxList-author-info text{
  font-size: 25rpx;
  color: #aaa;
  margin-left: 40rpx;
}
.talkxList-title{
  margin-left: 25rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 30rpx;
  color: #333;
}
.talkxList-bg{
  margin-top: 30rpx;
  width: 100%;
  height: 340rpx;
}
.talkxList-desc{
  font-size: 28rpx;
  color: #666;
  margin-top: 30rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.talkxList-like{
  margin: 20rpx 0 15rpx 20rpx;
  font-size: 13px;
  line-height: 16px;
 
}
.talkxList-like-img{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.talkxList-like-font{
  margin-right: 20px;
  vertical-align: middle;
}